<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".ComprarBoletoFr"
    android:fillViewport="true">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="5dp">

        <TextView
            android:id="@+id/TXVSFuncion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:paddingVertical="5dp"
            android:text="¿Cuántos boletos desea comprar?"
            android:textAlignment="center"
            android:textColor="#f000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:text="Seleccione la cantidad de Boletos que desee comprar"
            android:textColor="@color/gris"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/TXVEFuncion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView8"
            android:paddingLeft="8dp"
            android:text="Seleccione una función"
            android:textColor="#000"
            android:textSize="13sp" />

        <Spinner
            android:id="@+id/spFuncion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#000"
            android:entries="@array/funciones"
            android:paddingHorizontal="7dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gris" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Cantidad"
            android:textColor="#000"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/txvCantidad"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="4"
                android:background="@drawable/shapes"
                android:paddingHorizontal="10dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="24sp" />


            <ImageButton
                android:id="@+id/BtMenos"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_ovalado"
                android:src="@drawable/ic_menos" />

            <ImageButton
                android:id="@+id/BtMas"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_ovalado"
                android:src="@drawable/ic_mas"
                android:visibility="visible" />

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@color/gris" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btmdisponible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="15dp"
                android:background="@color/verdemb"
                android:text="Continuar"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:typeface="monospace" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>