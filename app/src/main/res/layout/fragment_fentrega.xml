                <TextView
                    android:id="@+id/txvseguro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:text="Protege tus boletos con tranquilidad al realizar la compra de sus boletos para cualquier evento, asegurÃ¡ndolo contra circunstancias inesperadas."
