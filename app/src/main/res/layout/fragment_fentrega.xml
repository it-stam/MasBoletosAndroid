                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/TBLCostos"
                android:layout_marginVertical="5dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbwillcall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/azulmboscuro"
                    android:checked="false"
                    android:duplicateParentState="false"
                    android:text="WILL CALL"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txvwillcall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="5dp"
                    android:text="El cliente debe acudir a cualquier punto de venta para recoger su boleto. La taquilla del recinto esta generalmente abierta el dÃ­a de la funciÃ³n. SerÃ¡ provechoso si usted puede llegar temprano para tener en cuenta el estacionamiento y para evitar el ingreso al recinto una vez iniciado el espectÃ¡culo."
