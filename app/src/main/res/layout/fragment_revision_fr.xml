<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RevisionFR"
    android:fillViewport="true"
    android:background="@color/blanco">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATOS FINALES DE TU COMPRA\nREVISA QUE LOS DATOS DE TU COMPRA SEAN CORRECTOS"
            android:textColor="@color/blanco"
            android:background="@color/azulmb"
            android:padding="5dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView26"
            android:layout_marginHorizontal="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/butaca"
            android:layout_alignParentRight="true" />

        <TableLayout
            android:id="@+id/tablDatps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView4"
            android:layout_toLeftOf="@+id/imageView4"
            android:paddingLeft="5dp"
            android:layout_alignParentLeft="true">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@color/gris2">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SecciÃ³n: "
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txvSeccionFRev"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ZONA GENERAL"
                    android:textColor="#000"
                    android:textSize="17sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@color/gris2">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fila: "
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txvfilaFRev"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GENERAL"
                    android:textColor="#000"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@color/gris2">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Asiento(s): "
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txvAsientosFRev"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView20"
                    android:layout_weight="1"
                    android:text="1"
                    android:textColor="#000"
                    android:textSize="17sp" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/TBLCostos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView4"
            android:paddingHorizontal="5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gris2"
                    android:text="Precio de Boleto"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txvprecioFRev"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="MX $150.00 x 4"
                    android:textColor="#000"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gris2"
                    android:text="Cargos por servicio"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txvcservFRev"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="MX $52.50"
                    android:textColor="#000"
                    android:textSize="17sp"
                    tools:text="MX $52.50" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gris2"
                    android:text="Cargos por Forma Entrega:"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txvcfentrFRev"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="MX $0.00"
                    android:textColor="#000"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gris2"
                    android:text="TOTAL: "
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txvtotalFRev"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="MX $600.00"
                    android:textColor="#000"
                    android:textSize="17sp" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/llseguro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TBLCostos"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:background="@color/gris2">


            <TextView
                android:id="@+id/txvasientosRev2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asientos(s): 1"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginVertical="5dp"
                android:background="@color/blanco"/>

            <TextView
                android:id="@+id/txvfpagoRev2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="20sp"
                tools:text="Forma de Pago: \nPayPal"
                android:layout_marginBottom="5dp"
                android:background="@color/blanco"/>

            <TextView
                android:id="@+id/txventregRev2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="20sp"
                tools:text="Entrega: WillCall"
                android:layout_marginBottom="5dp"
                android:background="@color/blanco"/>

            <TextView
                android:id="@+id/txvcfentrFRev2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargos por Forma Entrega:\n MX $0.00"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:background="@color/blanco"/>

            <TextView
                android:id="@+id/txvtotalFRev2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MX $600.00"
                android:padding="10dp"
                android:textSize="24sp"
                android:textColor="#ffff"
                android:background="@color/verde2"/>

            <CheckBox
                android:id="@+id/cbdeacuerdo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/azulmboscuro"
                android:text="Estoy de acuerdo"
                android:textColor="@color/negro"
                android:layout_marginBottom="5dp"
                android:background="@color/blanco"/>

        </LinearLayout>

        <Button
            android:id="@+id/btContinuar6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/llseguro"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="7dp"
            android:layout_marginVertical="7dp"
            android:background="@color/verdemb"
            android:text="Continuar"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp" />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>