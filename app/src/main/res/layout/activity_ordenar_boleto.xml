<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrdenarBoleto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/IMVEvento"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            app:srcCompat="@drawable/mbiconor" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:id="@+id/LLInfoCompra">

            <ImageView
                android:id="@+id/IMVFondo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/logo_masboletos" />
            <TextView
                android:id="@+id/txvNombreEve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Evento"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:textSize="24sp"
                android:paddingHorizontal="8dp"
                android:shadowColor="@color/negro"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>

            <TextView
                android:id="@+id/TXVDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txvNombreEve"
                android:layout_marginTop="-10dp"
                android:paddingHorizontal="8dp"
                android:text="Dirección"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"
                android:shadowColor="@color/negro"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>

            <TextView
                android:id="@+id/TXVPoliticas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/TXVDireccion"
                android:paddingHorizontal="8dp"
                android:text="Politícas"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"
                android:shadowColor="@color/negro"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>

            <TextView
                android:id="@+id/TXVDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/TXVPoliticas"
                android:paddingHorizontal="8dp"
                android:text="Información del Evento"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"
                android:shadowColor="@color/negro"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>
        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TBLOrdenar"
        android:background="@color/azulmboscuro"
        app:tabSelectedTextColor="@color/verdemb"
        app:tabTextColor="#fff"
        app:tabMode="fixed">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".OrdenarBoleto"
        android:id="@+id/VPFROrdenar">
    </android.support.v4.view.ViewPager>

</LinearLayout>